{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "jsx": "react-jsx",

    "module": "esnext",
    "moduleResolution": "bundler",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@features/*": ["src/features/*"],
      "@navigation/*": ["src/navigation/*"],
      "@providers/*": ["src/providers/*"],
      "@shared/*": ["src/shared/*"],
      "@store/*": ["src/store/*"],
      "@theme/*": ["src/theme/*"]
    },
    "types": ["react", "react-native"],
    "resolveJsonModule": true
  }
}
